package bridgeLabzDatastructure;

public class PrimeNumbers2D {
	static int capacity=10;
	static int prime[][]=new int[10][capacity];
	static int length;
public static void main(String[] args) {
	createPrimeNumberInArray(0,1000);
	printPrime();
	
}
public static void createPrimeNumberInArray(int k, int l) {
	int indexRow=0,indexCol=0;
	for(int i=k+2;i<=l;i++)
	{
		if(isPrime(i))
		{
			if(indexCol==capacity)
			{
				expand();
			}	
			prime[indexRow][indexCol]=i;
			length++;
			indexCol++;
		}
		if(i%100==0)
		{
			indexRow++;
			indexCol=0;
		}
	}
	
}
private static boolean isPrime(int i) {
	int count=0;
	for(int j=2;j<=Math.sqrt(i);j++)
	{
		if(i%j==0)
		{
			count++;
			break;
		}
	}
	if(count==0&&i!=0&&i!=1)
		return true;
	else 
		return false;
	
}
private static void printPrime() {
	int l=0;
	for(int i=0;i<10;i++)
	{
		System.out.print(l+"-"+(l+100)+" : ");
		for(int j=0;j<capacity;j++)
		{
			if(prime[i][j]==0)
				System.out.print("  ");
			else
				System.out.print(prime[i][j]+" ");
		}
		System.out.println();
		l+=100;
	}
	
}
private static void expand() {
	int cap=capacity;
	capacity=(capacity*3)/2;
	int prime2[][]=new int[10][capacity];
	for(int i=0;i<10;i++)
	{
		for(int j=0;j<cap;j++ )
			prime2[i][j]=prime[i][j];
	}
	prime=prime2;
	prime2=null;
	
}
}
