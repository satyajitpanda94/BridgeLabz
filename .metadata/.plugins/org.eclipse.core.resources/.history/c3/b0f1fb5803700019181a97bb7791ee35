package bridgeLabzDatastructure;


public class Calendar {
	static String months[]= {"January","February","March","April","May","June","July","August","September","October","November","December"};
	static int noOfDaysOfMonths[]= {31,28,31,30,31,30,31,31,30,31,30,31};
	static int cal[][]=new int[6][7];
	
public static void main(String[] args) {
	int month=Integer.parseInt(args[0]);
	int year=Integer.parseInt(args[1]);
	printCalendar(month,year);
}

private static void printCalendar(int month, int year) {
    creatCalendar(month,year);
    System.out.println(months[month-1]+", "+year);
    System.out.println("sun\tmon\ttue\twed\tthr\tfri\tsat");
    for(int i=0;i<6;i++)
    {
    	for(int j=0;j<7;j++)
    	{
    		if(cal[i][j]==0)
    			System.out.print(" \t");
    		else
    			System.out.print(cal[i][j]+"\t");
    	}
    	System.out.println();
    }
}
private static int findFirstDay(int day, int month, int year) {
	int y=year-(14-month)/12;
	int x=y+y/4-y/100+y/400;
	int m=month+12*((14-month)/12)-2;
	int d=(day+x+(31*m)/12)%7;
	return d;
}

private static boolean isLeapYear(int year) {
	if(year%400==0)
		return true;
	else if(year%100!=0)
		return false;
	else if(year%4==0)
		return true;
	else
	    return false;
}

private static void creatCalendar(int month, int year)
{
	if(isLeapYear(year))
    {
    	noOfDaysOfMonths[1]=29;
    }
    int dayOfWeek=findFirstDay(1,month,year);
    int d=0;
    s:
	for(int i=0;i<6;i++)
	{
		for(int j=dayOfWeek;j<7;j++)
		{
			d++;
			cal[i][j]=d;
			if(d>noOfDaysOfMonths[month-1])
				break s;
		}
		dayOfWeek=0;
	}
}
}
